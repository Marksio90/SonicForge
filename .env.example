# ===========================================
# SonicForge â€” Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# Application
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-me-to-a-random-string

# Database (managed by Docker Compose)
DATABASE_URL=postgresql+asyncpg://sonicforge:sonicforge@localhost:5432/sonicforge
DATABASE_URL_SYNC=postgresql://sonicforge:sonicforge@localhost:5432/sonicforge

# Redis (managed by Docker Compose)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# MinIO / S3 (managed by Docker Compose)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# === AI Music Generation ===
# Get your API keys from:
# Suno: https://suno.com (Premier plan ~$30-60/month)
SUNO_API_KEY=
SUNO_API_URL=https://api.suno.ai/v1

# Udio: https://udio.com
UDIO_API_KEY=
UDIO_API_URL=https://api.udio.com/v1

# ElevenLabs: https://elevenlabs.io
ELEVENLABS_API_KEY=

# === LLM APIs (for prompt crafting & chat bot) ===
# Anthropic Claude: https://console.anthropic.com
ANTHROPIC_API_KEY=

# OpenAI (for DALL-E thumbnails & fallback): https://platform.openai.com
OPENAI_API_KEY=

# LLM Provider: "anthropic" or "openai"
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-5-20250929

# === YouTube Streaming ===
YOUTUBE_STREAM_KEY=
YOUTUBE_RTMP_URL=rtmps://a.rtmp.youtube.com/live2
YOUTUBE_API_KEY=
YOUTUBE_CHANNEL_ID=

# === Streaming Settings ===
STREAM_BITRATE_VIDEO=4500k
STREAM_BITRATE_AUDIO=192k
STREAM_RESOLUTION=1920x1080
STREAM_FPS=30
CROSSFADE_DURATION=12
BUFFER_MIN_TRACKS=20

# Quality Gate
QUALITY_THRESHOLD=8.5
MAX_GENERATION_ATTEMPTS=5
VARIANTS_PER_CONCEPT=3

# === Backup Streaming ===
# Gyre.pro (~$25/month): https://gyre.pro
GYRE_API_KEY=
GYRE_ENABLED=false

# Restream.io (multi-platform): https://restream.io
RESTREAM_ENABLED=false
RESTREAM_KEY=

# === Monitoring & Notifications ===
# Telegram Bot: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Sentry: https://sentry.io
SENTRY_DSN=

# === Dashboard ===
DASHBOARD_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
